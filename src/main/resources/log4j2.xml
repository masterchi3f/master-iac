<Configuration status="warn">
    <Appenders>
        <Console
                name="console"
                target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight{%-5p} --- %style{%-4L}{bright_magenta} %style{%-40.40C}{magenta} : %m%n"
                    disableAnsi="false"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="console" />
        </Root>
    </Loggers>
</Configuration>
